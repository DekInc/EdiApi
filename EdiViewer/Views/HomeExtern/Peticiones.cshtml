@using ComModels
@{
    ViewData["Title"] = "Peticiones de pedidos";
    Layout = "_LayoutExtern";
}
<div id="mainDiv">
    <div class="container">
        <div class="card-deck cardMain">
            <div class="card box-shadow">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">Peticiones de pedidos</h4>
                </div>
                <div class="card-body">
                    <div class="clearfix"></div>
                    <br />
                    <form id="formReportes" accept-charset="UTF-8" method="post">
                        <table id="tblReportes" class="table table-striped table-bordered nowrap table-hover display tblReportes" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Fecha de creación</th>
                                    <th>Fecha y hora esperada</th>
                                    <th>Estado</th>
                                </tr>
                            </thead>
                        </table>
                        <br />
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var domtblReportes = null;
    var HashId = '';
    var foo = function () {
    };
    $.urlParam = function (name) {
        var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
        if (results == null) {
            return null;
        }
        return decodeURI(results[1]) || 0;
    }
    function fillTblReportes() {
        domtblReportes = $("#tblReportes").DataTable({
            select: true,
            responsive: window.mobileAndTabletcheck(),
            destroy: true,
            info: false,
            "scrollX": true,
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": false, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "lengthMenu": [[25, 35, 50, 65], [25, 35, 50, 65]],
            "language":
            {
                "processing": "<div class='divAjax'>Obteniendo datos<br /><img style='width:50px; height:50px;' src='/images/ajax.gif' /></div>",
                "decimal": ".",
                "thousands": ",",
                "emptyTable": "No hay información"
            },
            "ajax": {
                "url": "@this.Url.Action("GetPeticiones")",
                "type": "POST",
                "datatype": "json",
                "dataSrc": function (json) {
                    return json.data;
                }
            },
            "order": [[1, "desc"]],
            "columns": [
                { "data": "fechaCreacion", "name": "pedidoBarcode", "autoWidth": true, "defaultContent": "" },
                { "data": "fechaPedido", "name": "fechaPedido", "autoWidth": true, "defaultContent": "" },
                {
                    data: "idEstado",
                    render: function (data, type, row) {
                        if (type === 'display') {
                            if (row.idEstado == 1) return '<span alt="' + row.id + '">Guardado</span>';
                            if (row.idEstado == 2) return '<span alt="' + row.id + '">Enviado</span>';
                            if (row.idEstado == 3) return '<span alt="' + row.id + '">Despachado</span>';
                        }
                        return '';
                    },
                    className: "dt-body-center"
                }
            ]
        });
    }
    var a2;
    $(document).ready(function () {
        fillTblReportes();
        $('#tblReportes tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                domtblReportes.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                //trigger update
                //if ($(this).closest("tr").find('td:eq(5)').text().toLowerCase().includes('error')) {                    
                //    menErrorEdi("El reporte contiene errores y no puede visualizarse");
                //} else                 
                window.location.href = '@this.Url.Action("PeticionDet")?PedidoId=' + $($(this).closest("tr").find('td:eq(2)').find('span')[0]).attr('alt');
            }
        });
    });
</script>
